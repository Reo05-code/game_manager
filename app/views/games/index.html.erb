<h1>ゲーム一覧</h1>
<table>
  <thead>
    <tr>
      <th>ゲーム名</th>
      <th>ジャンル</th>
      <th>時間</th>
      <th>感想</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.title %></td>
        <td><%= game.genre %></td>
        <td><%= game.play_time %></td>
        <td><%= game.note %></td>
        <td><%= link_to '編集', edit_game_path(game) %></td>
        <td><%= link_to '削除', game_path(game), data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '追加', new_game_path %>
